@model IEnumerable<fa22team31finalproject.Models.Dispute>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transaction.TransactionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisputeStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisputeDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction.TransactionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisputeStatus)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CorrectAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisputeDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DisputeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DisputeID">Details</a> 
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.DisputeID">| Delete</a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
