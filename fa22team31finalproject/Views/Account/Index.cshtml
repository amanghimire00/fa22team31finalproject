@model IndexViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>Welcome @Model.FirstName!</h2>
<br />
<div>
    <h4>View your Account settings</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt> Full Name:</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>
        <dd>
            [@Html.ActionLink("Edit your Name", "ChangeName")]
        </dd>

        <dt>Full Address:</dt>
        <dd>@Html.DisplayFor(model => model.FullAddress)</dd>
        <dd>
            [@Html.ActionLink("Edit your address", "ChangePassword")]
        </dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>
        <dd>
            [@Html.ActionLink("Edit your phone number", "ChangePassword")]
        </dd>

        <dt>Email/User Name:</dt>
        <dd>@Model.Email</dd>

        <dt>Password:</dt>
        <dd>
            [@Html.ActionLink("Change your password", "ChangePassword")]
        </dd>
    </dl>
</div>

