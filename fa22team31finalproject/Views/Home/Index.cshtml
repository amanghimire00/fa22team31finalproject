
@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to Longhorn Bank!</h1>


<a asp-action="Register" asp-controller="Account" class="btn btn-success">Register for an Account</a>

@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Index" asp-controller="Account" class="btn btn-info">Accounts Summary</a>

    if (User.IsInRole("Admin"))
    {
        <a asp-action="Index" asp-controller="Departments" class="btn btn-danger">View Departments</a>
        <a asp-action="Index" asp-controller="RoleAdmin" class="btn btn-warning">Manage Users</a>
    }

}
